<div class="bg-white shadow-lg rounded-lg overflow-hidden hover:shadow-2xl transform hover:-translate-y-1 transition-all duration-300">
  <div class="p-4">
    <h2 class="text-2xl font-bold text-gray-800">タイトル： <%= post.title %></h2>
    <p class="text-gray-600 mt-2">詳細:<%= post.description %></p>
    <p class="text-gray-600 mt-2">開始日:<%= post.start_date %></p>
    <p class="text-gray-600 mt-2">終了日:<%= post.end_date %></p>
    <p class="text-gray-600 mt-2">人数:<%= post.recruiting_count %></p>
    <p class="text-gray-600 mt-2">ステータス:<%= post.status %></p>
  </div>
  <div class="px-4 py-2 bg-gray-100">
    <span class="text-gray-700">投稿者: <%= post.user.first_name %></span>
  </div>

  <% if defined?(show_detail_link) && show_detail_link %>
    <%= link_to '詳細', post_path(post) %>
  <% end %>
  <% if current_user.own?(post) %>
    <%= link_to '編集', edit_post_path(post), class: "text-blue-600 hover:text-blue-800" %>
    <%= link_to '削除', post_path(post), data: { turbo_method: :delete, turbo_confirm: '削除' } %>
  <% end %>
</div>
