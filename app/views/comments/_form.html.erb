<%= form_with model: comment, url: post_comments_path(post), class: "mt-6" do |f| %>
  <div class="mb-4">
    <%= f.label :body, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= f.text_area :body, rows: 4, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>
  <%= f.submit '投稿', class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
<% end %>
